<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ShoulderLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/shoulderheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#B4EF78"
            android:fontFamily="serif"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="@string/shoulderHeading"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/exShoulder1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amarante"
                    android:gravity="center_horizontal"
                    android:text="@string/exShoulder1"
                    android:textSize="22sp" />


                <ImageView
                    android:id="@+id/shoulderPress"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/shoulderPressIMG"
                    app:srcCompat="@drawable/shoulderpress"
                    tools:ignore="ImageContrastCheck,ImageContrastCheck" />

                <TextView
                    android:id="@+id/exShoulder2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amarante"
                    android:gravity="center_horizontal"
                    android:text="@string/exShoulder2"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/uprightrow"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/uprightrowIMG"
                    app:srcCompat="@drawable/upright"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/exShoulder3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amarante"
                    android:gravity="center_horizontal"
                    android:text="@string/exShoulder3"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/frontraise"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/forntraiseIMG"
                    android:paddingBottom="8dp"
                    app:srcCompat="@drawable/frontriase" />

                <TextView
                    android:id="@+id/exShoulder4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amarante"
                    android:gravity="center_horizontal"
                    android:text="@string/exShoulder4"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/sideRaiseIMG"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/exShoulder4IMG"
                    android:paddingBottom="8dp"
                    app:srcCompat="@drawable/sideraise" />

                <TextView
                    android:id="@+id/exShoulder5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amarante"
                    android:gravity="center_horizontal"
                    android:text="@string/exShoulder5"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/shrugsIMG"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/exShoulder5IMG"
                    android:paddingBottom="8dp"
                    app:srcCompat="@drawable/shrugs" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
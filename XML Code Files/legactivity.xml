<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#B4EF78"
            android:fontFamily="serif"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="@string/legsHeading"
            android:textSize="40sp"
            android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exLeg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amarante"
            android:gravity="center_horizontal"
            android:text="@string/exLeg1"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/exLeg1IMG"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:padding="12dp"
            app:srcCompat="@drawable/freesquat"
            android:contentDescription="@string/exLeg1IMG" />

        <TextView
            android:id="@+id/exLeg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amarante"
            android:gravity="center_horizontal"
            android:text="@string/exLeg2"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/exLeg2IMG"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            app:srcCompat="@drawable/weightsquat"
            android:contentDescription="@string/exLeg2IMG" />

        <TextView
            android:id="@+id/exLeg3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amarante"
            android:gravity="center_horizontal"
            android:text="@string/exLeg3"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/exLeg3IMG"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/exLeg3IMG"
            android:padding="10dp"
            app:srcCompat="@drawable/lunges"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/exLeg4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amarante"
            android:gravity="center_horizontal"
            android:text="@string/exLeg4"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/exLeg4IMG"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            app:srcCompat="@drawable/sumosquat"
            android:contentDescription="@string/exLeg4IMG" />

        <TextView
            android:id="@+id/exLeg5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amarante"
            android:gravity="center_horizontal"
            android:text="@string/exLeg5"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/exLeg5IMG"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:padding="12dp"
            app:srcCompat="@drawable/legextension"
            android:contentDescription="@string/exLeg5IMG" />

    </LinearLayout>
    </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ChestLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Chestheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#B4EF78"
            android:fontFamily="serif"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="@string/chestHeading"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/exChest1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amarante"
                    android:gravity="center_horizontal"
                    android:text="@string/firstexChest"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/chest1img"
                    app:srcCompat="@drawable/chest1" />

                <TextView
                    android:id="@+id/firstexChest2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amarante"
                    android:gravity="center_horizontal"
                    android:text="@string/secondexChest"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/chest1img"
                    android:padding="8dp"
                    app:srcCompat="@drawable/chest2" />

                <TextView
                    android:id="@+id/firstexChest3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amarante"
                    android:gravity="center_horizontal"
                    android:text="@string/thirdChestEx"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:contentDescription="@string/chest1img"
                    android:padding="5dp"
                    app:srcCompat="@drawable/pushup"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/firstexChest5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amarante"
                    android:gravity="center_horizontal"
                    android:text="@string/chestex4"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:padding="4dp"
                    app:srcCompat="@drawable/chest4"
                    android:contentDescription="@string/excercise4" />

                <TextView
                    android:id="@+id/firstexChest6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amarante"
                    android:gravity="center_horizontal"
                    android:text="@string/chestex5"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="4dp"
                    app:srcCompat="@drawable/chest5"
                    android:contentDescription="@string/pullover" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>